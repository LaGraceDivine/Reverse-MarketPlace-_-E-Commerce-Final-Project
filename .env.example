# Environment Configuration Template
# Copy this file to .env and update with your actual credentials

# Database Configuration
DB_HOST=localhost
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# Paystack Configuration
# For local development, use test keys (sk_test_... and pk_test_...)
# For production, use live keys (sk_live_... and pk_live_...)
PAYSTACK_SECRET_KEY=your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=your_paystack_public_key

# Application Configuration
# Set to 'development' for local, 'production' for live server
APP_ENVIRONMENT=development
# Update with your actual domain for live server
APP_BASE_URL=http://localhost:8888/register_sample
SERVER=http://localhost:8888
